<?xml version='1.0' encoding='utf-8'?>
<widget 
	id="com.sinopacific.phonetrack" 
	version="1.0.1"
	android-versionCode="19"
    ios-CFBundleVersion="19"
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:cdv="http://cordova.apache.org/ns/1.0"  	
	xmlns:android="http://schemas.android.com/apk/res/android"
	defaultlocale="en-US">
    <name>PhoneTrack</name>
    <description>
        PhoneTrack gps tracking app
    </description>
    <author email="support@phonegap.com" href="http://quiktrak.com.au">
        M2M Global Technology Limited
    </author>
    <content src="index.html" />
    <access origin="*"  allows-arbitrary-loads-for-media='true' allows-arbitrary-loads-in-web-content='true' allows-local-networking='true' />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">    	
    	<!-- background-geolocation -->
		<config-file target="app/src/main/AndroidManifest.xml" parent="/manifest/application" >
		    <meta-data
		      android:name="com.transistorsoft.locationmanager.license_key"
		      android:value="YOUR_LICENSE_KEY_HERE" />
		</config-file>
		<!-- /background-geolocation -->

	  	<edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
	  	    <application android:usesCleartextTraffic="true" />
	  	</edit-config>

	  	<!-- sms plugin -->
	  	<!-- <config-file parent="/manifest/application" mode="merge">
	  		    	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	  			</config-file>
	  			<config-file parent="/manifest/application" mode="merge">
	  		    	<uses-permission android:name="android.permission.READ_SMS" />
	  			</config-file> -->
		<config-file target="app/src/main/AndroidManifest.xml" parent="/manifest/application" mode="merge">
	    	<uses-permission android:name="android.permission.SEND_SMS" />
		</config-file>
		<config-file target="app/src/main/AndroidManifest.xml" parent="/manifest/application" mode="merge">
	    	<uses-permission android:name="android.permission.READ_SMS" />
		</config-file>
		<config-file target="app/src/main/AndroidManifest.xml" parent="/manifest/application" mode="merge">
	    	<uses-permission android:name="android.permission.RECEIVE_SMS" />
		</config-file>
	  	<!-- /sms plugin -->
	  	
	</platform>
	


	<preference name="android-build-tool" value="gradle" />
	<preference name="load-url-timeout" value="140000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-minSdkVersion" value="19" />
    <!-- <preference name="android-maxSdkVersion" value="27" /> -->
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="deployment-target" value="10.2" />
    <preference name="StatusBarOverlaysWebView" value="false" />
