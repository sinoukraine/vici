<?xml version='1.0' encoding='utf-8'?>
<widget 
	id="com.viciapp.zaf"
	version="1.0.0"
	android-versionCode="3"
    ios-CFBundleVersion="3"
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:cdv="http://cordova.apache.org/ns/1.0"  	
	xmlns:android="http://schemas.android.com/apk/res/android"
	defaultlocale="en-US">
    <name>ViCi</name>
    <description>
        ViCi gps tracking app
    </description>
    <author email="support@phonegap.com" href="http://quiktrak.com.au">
        M2M Global Technology Limited
    </author>
    <content src="index.html" />
    <access origin="*"  allows-arbitrary-loads-for-media='true' allows-arbitrary-loads-in-web-content='true' allows-local-networking='true' />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    


    <platform name="android"> 
        <edit-config target="/manifest/application" file="app/src/main/AndroidManifest.xml" mode="merge" >
            <application android:usesCleartextTraffic="true" />
        </edit-config>   


        <!-- background-geolocation -->
       <config-file target="app/src/main/AndroidManifest.xml" parent="/manifest/application" >
           <meta-data
              android:name="com.transistorsoft.locationmanager.license_key"
              android:value="bf6c21a7e7d61b1952d6a04222eff0768385c057431904b5229d40e4f2beeb12" />
       </config-file>
        <!-- /background-geolocation -->	  	       	  	
	</platform>

	<!-- sms plugin -->        
